{
  "$schema": "http://json.schemastore.org/template",
  "author": "FmgLib",
  "classifications": [
    "MAUI",
    "Android",
    "iOS",
    "macOS",
    "Windows",
    "Mac Catalyst",
    "Tizen"
  ],
  "identity": "FmgLibMauiMarkupApp",
  "name": ".NET MAUI Markup App",
  "shortName": "fmglib-mauimarkup-app",
  "description": "C# Markup (No XAML) template for .NET MAUI application with Hotreload process.",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "groupIdentity": "FmgLibMauiMarkupApp",
  "sourceName": "FmgLib.MauiMarkup.App",
  "preferNameDirectory": true,
  "guids": [
    "e0cd07a0-669f-49cf-bda8-9f77d0c5ca77"
  ],
  "symbols": {
    "netMajor": {
      "type": "parameter",
      "datatype": "choice",
      "displayName": "Framework",
      "description": "Select the target .NET version",
      "defaultValue": "10",
      "replaces": "NETMAJOR_VERSION",
      "choices": [
        {
          "choice": "9",
          "displayName": ".NET 9.0 (Standard Term Support)",
          "description": ".NET 9.0 (Standard Term Support)"
        },
        {
          "choice": "10",
          "displayName": ".NET 10.0 (Long Term Support)",
          "description": ".NET 10.0 (Long Term Support)"
        }
      ]
    },
    "includeContent": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Include sample content",
      "description": "Include sample content (extra pages and Shell navigation)",
      "defaultValue": "false"
    },
    "NET10": {
      "type": "computed",
      "value": "(netMajor == \"10\")"
    },
    "NET9": {
      "type": "computed",
      "value": "(netMajor == \"9\")"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!includeContent)",
          "exclude": [
            "Samples/**"
          ]
        }
      ]
    }
  ]
}