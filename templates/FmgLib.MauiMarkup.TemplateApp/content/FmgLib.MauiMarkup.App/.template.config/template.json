{
  "$schema": "http://json.schemastore.org/template",
  "author": "FmgLib",
  "classifications": [ "MAUI", "Android", "iOS", "macOS", "Windows", "Mac Catalyst", "Tizen" ],
  "identity": "FmgLibMauiMarkupApp",
  "name": ".NET MAUI Markup App",
  "shortName": "fmglib-mauimarkup-app",
  "description": "C# Markup (No XAML) template for .NET MAUI application with Hotreload process.",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "groupIdentity": "FmgLibMauiMarkupApp",
  "sourceName": "FmgLib.MauiMarkup.App",
  "preferNameDirectory": true,
  "guids": [
    "e0cd07a0-669f-49cf-bda8-9f77d0c5ca77"
  ],
  "symbols": {
    "netMajor": {
      "type": "choice",
      "description": "Select the target .NET version",
      "defaultValue": "10",
      "choices": [
        { "choice": "10", "description": ".NET 10 (default)" },
        { "choice": "9", "description": ".NET 9" }
      ]
    },
    "includeContent": {
      "type": "bool",
      "description": "Include sample content (extra pages and Shell navigation)",
      "defaultValue": "false"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!includeContent)",
          "exclude": [
            "Samples/**"
          ]
        }
      ]
    }
  ]
}
